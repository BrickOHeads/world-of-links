<div class="row">
    <div class="col">
        {{#errors.0}}
            <div class="alert alert-danger" role="alert">
                {{#errors}}
                <p>{{msg}}</p>
                {{/errors}}
            </div>
        {{/errors.0}}

        <form method="POST" action="/links">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" value="{{link.title}}" />
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="url" class="form-control" id="url" name="url" value="{{link.url}}" />
            </div>
            <div class="form-group">
                <label for="descr">Descr</label>
                <textarea class="form-control" id="descr" name="descr">{{link.descr}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create link</button>
        </form>
    </div>
</div>
